<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.HTPT" name="HTPT repository" version="1.0.0" provider-name="Gal Kahalani">
	<extension point="xbmc.addon.repository" name="HTPT repository">
		<info compressed="false">https://raw.githubusercontent.com/htpthtpt/htpt/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/htpthtpt/htpt/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/htpthtpt/htpt/master/repository.HTPT/</datadir>
    </extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">HTPT</summary>
		<description lang="en">Get frequently updates from HTPT team</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="service.HTPT" name="HTPT Service" version="0.0.1" provider-name="Gal Kahalani">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.service" library="default.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
  </extension>
</addon>

<addon id="skin.HTPT" version="0.0.1" name="HTPT SYSTEM" provider-name="Gal Kahalani">
  <requires>
    <import addon="xbmc.gui" version="5.0.1"/>
    <import addon="script.favourites" version="3.2.5"/>
    <import addon="service.skin.widgets" version="0.0.29"/>
  </requires>
  <extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="1" debugging="false">
    <res width="1920" height="1080" aspect="16:9" default="true" folder="1080i"/>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en"></summary>
    <summary lang="he"></summary>
    <description lang="en">HTPT - because not all is self-evident</description>
    <disclaimer>HTPT Support: 0547393531</disclaimer>
  </extension>
</addon>
</addons>
